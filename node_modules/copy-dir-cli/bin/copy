#!/usr/bin/env node

var program = require('commander');
var fs = require('fs'),
    stat = fs.stat;

/*
 * 复制目录中的所有文件包括子目录
 * @param { String } 需要复制的目录
 * @param { String } 复制到指定的目录
 */
function copy(src, dest) {
    fs.readdir(src, function (err, paths) {
        if (err) {
            throw err;
        }
        paths.forEach(function (path) {
            var _src = src + '/' + path,
                _dest = dest + '/' + path,
                readable, writable;
            stat(_src, function (err, st) {
                if (err) {
                    throw err;
                }
                if (st.isFile()) {
                    readable = fs.createReadStream(_src);
                    writable = fs.createWriteStream(_dest);
                    readable.pipe(writable);
                } else if (st.isDirectory()) {
                    exists(_src, _dest, copy);
                }
            });
        });
    });
};

/**
 * 在复制目录前需要判断该目录是否存在，不存在需要先创建目录
 * @param  { String }   src      需要复制的目录
 * @param  { String }   dest     复制到指定的目录
 * @param  {Function} callback   复制函数
 */
function exists(src, dest, callback) {
    fs.exists(dest, function (exists) {
        if (exists) {
            callback(src, dest);
        } else {
            fs.mkdir(dest, function () {
                callback(src, dest);
            });
        }
    });
};

program
    .version('0.0.1')
    .allowUnknownOption()
    .usage('/src /dest')
    .action(function (src, dest) {
        exists(src, dest, copy)
    })
    .parse(process.argv);

if (!process.argv.slice(2).length) {
    program.outputHelp();
}